@model Urun
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h2>User Information</h2>
        <p>ID: @ViewBag.Id</p>
        <p>First Name: @ViewBag.Ad</p>
        <p>Last Name: @ViewBag.Soyad</p>
    </div>
    <div class="col-md-4"></div>
</div>
<hr />
<h2 class="text-center h6">Ürünler</h2>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="Urun" method="post">
            <div class="form-group">
                <label asp-for="UrunId">Id : </label>
                <input type="text" class="form-control" asp-for="UrunId" placeholder="Enter Id">
            </div>
            <div class="form-group">
                <label asp-for="UrunAdi">Ürün Adı : </label>
                <input type="text" class="form-control" asp-for="UrunAdi" placeholder="Ürün Adı">
            </div>
            <div class="form-group">
                <label asp-for="UrunFiyat">Ürün Fiyatı : </label>
                <input type="number" class="form-control" asp-for="UrunFiyat" placeholder="Ürün Fiyatı">
            </div>
            <div class="form-group">
                <label asp-for="UrunStokAdet">Ürün Stok Adet : </label>
                <input type="number" class="form-control" asp-for="UrunStokAdet" placeholder="Ürün Stok Adet">
            </div>
            <button type="submit" class="btn btn-primary mt-2">Submit</button>
        </form>
    </div>
</div>


